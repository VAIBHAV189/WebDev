    <form action="/tasks" method="POST">
        <input type='text' name="name">
        <input type="number" min="0" max="5" value="1" name="priority">
        <button type="submit">Add</button>
    </form>
    <ul>
        {{#each tasklist as |item|}}
            <li>
                <b>{{item.priority}}</b>
                {{item.name}}
            </li>
        {{/each}}
    </ul>
</body>
</html>